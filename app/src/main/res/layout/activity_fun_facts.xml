<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51b46d"
    tools:context="com.edmarkou.funfacts.FunFactsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Did you know?"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:textSize="24sp" />

    <Button
        android:id="@+id/getFunFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/background_light"
        android:text="Show another fun fact!"
        android:textColor="#51b46d"
        android:textSize="18sp"
        tools:background="@android:color/background_light" />

    <TextView
        android:id="@+id/funFactView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="50dp"
        android:text="Ants stretch when they wake up in the morning."
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="24sp" />

</RelativeLayout>
